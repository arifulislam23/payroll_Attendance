
@model KS_Payroll.Areas.Admin.ViewModels.EmpinfoVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-md-4">

        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Create Event/ Holiday</h3>
            </div><!-- /.box-header -->
            <!-- form start -->

            <form role="form" asp-action="Details" asp-controller="Regine">
                <div class="box-body">

                    <div class="form-group">
                        <label for="CompanyId">Company </label>
                        <span class="text-danger"></span>
                        <select required class="form-control" id="EmpCompany" name="EmpCompany" asp-items="@(new SelectList(ViewBag.companies, "Cid","CompanyName"))" onchange="DepartmentNameForDisabled()">
                            <option value="Select Company" selected disabled>Select Company</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Employee ID Card</label>
                        <input type="text" class="form-control" id="idcard" asp-for="EmpIDCard"/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Employee Phone</label>
                        <input type="text" class="form-control" id="phone" asp-for="EmpPhone" />
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div><!-- /.box -->


    </div><!--/.col (reghit) -->
</div>
