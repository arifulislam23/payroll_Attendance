@model IEnumerable<KS_Payroll.Areas.Admin.Data.RowAttendance>

@{
    ViewData["Title"] = "RowAttendanceList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Row Attendance List Table</h3>
    </div><!-- /.box-header -->
    <div class="box-body">

        <table class="table table-hover" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.empSCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Frist_In_Time)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Last_Out_Time)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.empSCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Frist_In_Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Last_Out_Time)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>

    @section Scripts{

        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript" src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
        <script src="../../plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
        <script src="../../plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>

        <script>
            $(document).ready(function () {
                $('#myTable').DataTable();
            });

        </script>
        <script>
            $("#tableSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });


        </script>

    }
