
@model KS_Payroll.Areas.Admin.Data.Designation
@{
    IEnumerable<Designation> DesignationList = ViewData["Designations"] as IEnumerable<Designation>;
    IEnumerable<Grade> GradeList = ViewData["grades"] as IEnumerable<Grade>;
}



@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<head>
    <link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
</head>

<div class="row">

    <div class="col-md-3">

        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Create Designations</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form role="form" asp-action="Create_Designation" asp-controller="Designation" asp-area="Admin">
                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Designation Name</label>
                        <input type="text" class="form-control" asp-for="DesigName" id="DesigName" autocomplete="off" required
                               placeholder="Designation Title">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Grade</label>
                        <select id="DesignationGrade" name="Grade" class="form-control" required>

                            <option selected disabled>Select Grade</option>
                            <option value="0">Null</option>
                            <option value="1">1st</option>
                            <option value="2">2nd</option>
                            <option value="3">3rd</option>
                            <option value="4">4th</option>
                            <option value="5">5th</option>
                            <option value="6">6th</option>
                            <option value="7">7th</option>
                            <option value="8">8th</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Over Time</label>
                        <select class="form-control" id="AttenBonus" asp-for="OverTime" required>
                            <option value="True">Yes</option>
                            <option value="False">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Attendance Bonus</label>
                        <input type="number" class="form-control" asp-for="AttenBonus" id="OverTime" autocomplete="off" value="0" required
                               placeholder="If have any Atten Bonus: _">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Holiday Allowance</label>
                        <input type="number" class="form-control" asp-for="HolidayAllowance" id="HolidayAllowance" autocomplete="off" value="0"required
                               placeholder="If have Holiday Allowance amount: _">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Night Bill</label>
                        <input type="number" class="form-control" asp-for="NightBill" id="NightBill" autocomplete="off" value="0"required
                               placeholder="If have Night Bill amount: _">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Lunch Bill</label>
                        <input type="number" class="form-control" asp-for="LunchBill" id="LunchBill" autocomplete="off" value="0"required
                               placeholder=" If have Tiffin Bill amount: _ ">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Tiffin Bill</label>
                        <input type="number" class="form-control" asp-for="TiffinBill" id="TiffinBill" autocomplete="off" value="0"required
                               placeholder=" If have Tiffin Bill amount: _ ">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Iftar Bill</label>
                        <input type="number" class="form-control" asp-for="IftarBill" id="IftarBill" autocomplete="off" value="0"required
                               placeholder=" If have Tiffin Bill amount: _ ">
                    </div>

                </div><!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div><!-- /.box -->


    </div><!--/.col (reghit) -->

    <div class="col-md-9">

        <div class="box box-primary col-md-9">
            <table class="table table-striped table-responsive-md">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Designation Name
                        </th>
                        <th>
                            Grade
                        </th>
                        <th>
                            Attendance Bonus
                        </th>
                        <th>
                            Over Time
                        </th>
                        <th>
                            Holiday Allowance
                        </th>
                        <th>
                            Night Bill
                        </th>
                        <th>
                            Lunch Bill
                        </th>
                        <th>
                            Tiffin Bill
                        </th>
                        <th>
                            Iftar Bill
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dpt in DesignationList)
                    {
                        <tr>
                            <td>@dpt.DesigID</td>
                            <td>@dpt.DesigName</td>
                            <td>@dpt.Grade</td>
                            <td>@dpt.AttenBonus</td>
                            <td>@dpt.OverTime</td>
                            <td>@dpt.HolidayAllowance</td>
                            <td>@dpt.NightBill</td>
                            <td>@dpt.LunchBill</td>
                            <td>@dpt.TiffinBill</td>
                            <td>@dpt.IftarBill</td>
                            <td>
                                <button data-id="@dpt.DesigID"
                                       data-name="@dpt.DesigName"
                                       data-Grade="@dpt.Grade"
                                       data-AttenBonus="@dpt.AttenBonus"
                                       data-OverTime="@dpt.OverTime"
                                       data-HolidayAllowance="@dpt.HolidayAllowance"
                                       data-NightBill="@dpt.NightBill"
                                       data-LunchBill="@dpt.LunchBill"
                                       data-TiffinBill="@dpt.TiffinBill"
                                       data-IftarBill="@dpt.IftarBill"
                                       class="btn btn-primary editDept" type="button" data-toggle="modal" data-target="#dep" value="Edit" >
                                <i class="fa fa-pencil-square-o"></i></button>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div><!-- /.box -->

    </div><!--/.col (left) -->
</div>

<!-- Modal For Designations -->
<div class="modal fade" id="dep" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form" asp-action="Edit_Designation" asp-controller="Designation" asp-area="Admin">
                <div class="box-body">

                    <input type="hidden" class="form-control" asp-for="DesigID" id="modolid">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Designation Name</label>
                        <input type="text" class="form-control" asp-for="DesigName" id="modolDesigName1" autocomplete="off"
                               placeholder="Designation Title">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Grade</label>
                        <select id="modolDesignationGrade" name="Grade" class="form-control" required>

                            <option selected disabled>Select Grade</option>
                            <option value="0">Null</option>
                            <option value="1">1st</option>
                            <option value="2">2nd</option>
                            <option value="3">3rd</option>
                            <option value="4">4th</option>
                            <option value="5">5th</option>
                            <option value="6">6th</option>
                            <option value="7">7th</option>
                            <option value="8">8th</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="exampleInputEmail1">Over Time</label>
                        <select class="form-control" id="modolOverTime" asp-for="OverTime" required>
                            <option value="True">Yes</option>
                            <option value="False">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Attendance Bonus</label>
                        <input type="number" class="form-control" asp-for="AttenBonus" id="modolAttenBonus" autocomplete="off" value="0" required
                               placeholder="If have any Atten Bonus: _">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Holiday Allowance</label>
                        <input type="number" class="form-control" asp-for="HolidayAllowance" id="modolHolidayAllowance" autocomplete="off" value="0"
                               placeholder="If have Holiday Allowance amount: _">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Night Bill</label>
                        <input type="number" class="form-control" asp-for="NightBill" id="modolNightBill" autocomplete="off" value="0"
                               placeholder="If have Night Bill amount: _">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Lunch Bill</label>
                        <input type="number" class="form-control" asp-for="LunchBill" id="alLunchBill" autocomplete="off" value="0"
                               placeholder=" If have Tiffin Bill amount: _ ">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Tiffin Bill</label>
                        <input type="number" class="form-control" asp-for="TiffinBill" id="modolTiffinBill" autocomplete="off" value="0"
                               placeholder=" If have Tiffin Bill amount: _ ">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Iftar Bill</label>
                        <input type="number" class="form-control" asp-for="IftarBill" id="modolIftarBill" autocomplete="off" value="0"
                               placeholder=" If have Tiffin Bill amount: _ ">
                    </div>

                </div><!-- /.box-body -->

                <div class="box-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{

    <script src="https://code.jquery.com/ui/1.11.3/jquery-ui.min.js"></script>
    <script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });


        /*script for Company*/
        $(".editDept").click(function () {

            var id = $(this).data('id');
            var modolDesigName = $(this).data('name');
            var modolDesignationGrade = $(this).data('grade');
            var modolAttenBonus = $(this).data('attenbonus');
            var modolOverTime = $(this).data('overtime');
            var modolHolidayAllowance = $(this).data('holidayallowance');
            var modolOverTime = $(this).data('overtime');
            var modolNightBill = $(this).data('nightbill');
            var modolLunchBill = $(this).data('lunchbill');
            var modolTiffinBill = $(this).data('tiffinbill');
            var modolIftarBill = $(this).data('iftarbill');


            document.getElementById('modolid').value = id;
            document.getElementById('modolDesigName1').value = modolDesigName;
            document.getElementById('modolDesignationGrade').value = modolDesignationGrade;
            document.getElementById('modolAttenBonus').value = modolAttenBonus;
            document.getElementById('modolOverTime').value = modolOverTime;
            document.getElementById('modolHolidayAllowance').value = modolHolidayAllowance;
            document.getElementById('modolNightBill').value = modolNightBill;
            document.getElementById('alLunchBill').value = modolLunchBill;
            document.getElementById('modolTiffinBill').value = modolTiffinBill;
            document.getElementById('modolIftarBill').value = modolIftarBill;
        });
    </script>
}